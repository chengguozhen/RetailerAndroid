<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/order_ls_item_sale_img"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_ls_item_sale_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45g乐事薯片 美国经典原味"
                    android:gravity="center_vertical"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/order_ls_item_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="125.0"/>
                <TextView
                    android:id="@+id/order_total_price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥"
                    android:layout_toLeftOf="@+id/order_ls_item_sale_price"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/main_text_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/spec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="规格："
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/order_ls_item_sale_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/spec"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center_vertical"
                    android:text="1*40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/order_ls_item_count"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center_vertical"
                    android:text="×"/>
                <TextView
                    android:id="@+id/order_ls_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/gray_text_color"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_background_color"/>
</LinearLayout>