<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/my_middle_area_left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            />
        <TextView
            android:id="@+id/my_store_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="经营范围"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            />
        <TextView
            android:id="@+id/my_proxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="负责人"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            />
        <TextView
            android:id="@+id/my_proxy_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="负责人电话"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_middle_area_right"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/my_address_et"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址住在哪里，我住在Mart，Martian→me"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            android:background="@null"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/my_store_area_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="范围这么大 要不要吓死宝宝"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            android:background="@null"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/my_proxy_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="对哦父母"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            android:background="@null"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/my_proxy_telephone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="8949684651351"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_small"
            android:background="@null"
            android:singleLine="true"
            />
    </LinearLayout>
</LinearLayout>