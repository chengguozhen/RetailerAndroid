<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:background="@mipmap/bg3"
        android:orientation="vertical">
        <com.neighbor.retailer_android.ui.view.CircularImage
            android:id="@+id/my_head_img"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="旺仔小小瓢"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:background="@color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_bussiness_card"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@mipmap/card_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="名片"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@mipmap/order_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="订单"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_whole_sale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@mipmap/ws_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="批发商"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_integral"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@mipmap/address_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="地址"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/my_pwd_change"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@mipmap/pwd_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="修改密码"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="统计"
            android:layout_marginLeft="8dp"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_stock_cycle_count"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品进货周期统计"
            android:layout_marginLeft="32dp"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="right|center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goto_gray"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_price_change_count"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品价格变动统计"
            android:layout_marginLeft="32dp"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="right|center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goto_gray"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
