<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/whole_sale_title_bar"/>

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background_color"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/whole_lv_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/whole_detail_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ws_test_img"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/whole_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="幸福便利店"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/main_text_color"
                        android:gravity="center_vertical"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="账号："
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/gray_text_color"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/whole_detail_id"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0122886673"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/main_text_color"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="编码："
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/gray_text_color"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/whole_detail_code"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="20161218"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/main_text_color"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/main_theme_color"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/whole_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:text="山东省威海市经济技术开发区青岛中路107-2号创业孵化大楼"
                    android:gravity="center"
                    android:layout_weight="4"/>
                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/whole_phone_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/meishi_phone"
                        android:background="@color/transparent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="经营范围："
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/gray_text_color"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="联系人："
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/gray_text_color"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="联系电话："
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/gray_text_color"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="邮箱："
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/gray_text_color"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/whole_detail_kind"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="便利超市"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/main_text_color"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/whole_detail_connect_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="杨雅洁"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/main_text_color"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/whole_detail_connect_phone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="15764788662"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/main_text_color"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/whole_detail_mail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="xfbld@163.com"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/main_text_color"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/shop_detail_btn"
                    android:background="@color/main_theme_color"
                    android:text="商品详情"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/apply_member_btn"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@color/main_theme_color"
                    android:text="申请会员"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/kind_no_network_bar"
            android:id="@+id/whole_detail_not_network" />

    </LinearLayout>
</LinearLayout>
