<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_widget_height"
    android:background="@color/main_theme_color"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/home_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_margin_distance"
        />
    <TextView
        android:id="@+id/home_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_margin_distance"
        android:text="城市"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="30dp"
        android:text="首页"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/home_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/default_margin_distance"
        />
</LinearLayout>