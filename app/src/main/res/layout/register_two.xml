<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_background_color"
        android:layout_margin="@dimen/activity_horizontal_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*商户名：        "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>

                <EditText
                    android:id="@+id/edit_saler_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*商户类型：    "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <Spinner
                    android:id="@+id/edit_saler_shop_kind"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*负责人：        "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <EditText
                    android:id="@+id/edit_saler_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*负责人电话："
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <EditText
                    android:id="@+id/edit_saler_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*所在区域：    "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <Spinner
                    android:id="@+id/edit_saler_area"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*经营范围：    "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <Spinner
                    android:id="@+id/edit_sale_range"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*详细地址：    "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <EditText
                    android:id="@+id/edit_saler_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*证件类型：    "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <Spinner
                    android:id="@+id/edit_saler_document_type"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*证件号码：    "
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>
                <EditText
                    android:id="@+id/edit_saler_document_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="上传身份证照片\n或营业执照照片"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/upload_img_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/click"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:text="上传证件照"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/my_img"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/register_pre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:text="上一步" />
        <Button
            android:id="@+id/register_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/click"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:text="立即注册" />
    </LinearLayout>
</LinearLayout>
