<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/default_margin_distance"
            android:layout_marginRight="@dimen/default_margin_distance"
            android:layout_marginTop="@dimen/default_margin_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notice_title"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="dsfiundfsdsofin"
                android:textSize="@dimen/text_size_medium"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/notice_time"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="10:35:15"
                android:layout_marginLeft="@dimen/default_margin_distance"
                android:textSize="@dimen/text_size_medium"
                android:gravity="right"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>